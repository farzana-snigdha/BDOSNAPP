<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="12dp"
    android:paddingTop="12dp"
    android:paddingRight="12dp"
    android:gravity="center_horizontal"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/profile_missing_photo"
        android:layout_width="150dp"
        android:layout_height="178dp"
        android:src="@drawable/ic_person"
        />

    <TextView
        android:id="@+id/profile_missing_location_label"
        android:layout_width="177dp"
        android:layout_height="30dp"
        android:layout_below="@id/profile_missing_name_text"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="7dp"
        android:layout_toEndOf="@id/profile_missing_photo"
        android:background="@color/headbar"
        android:text="Location"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/profile_missing_name_label"
        android:layout_width="177dp"
        android:layout_height="30dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="7dp"
        android:layout_toEndOf="@id/profile_missing_photo"
        android:background="@color/headbar"
        android:text="Name"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/profile_missing_name_text"
        android:layout_width="wrap_content"
        android:layout_height="42dp"
        android:layout_below="@id/profile_missing_name_label"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="6dp"
        android:layout_toEndOf="@id/profile_missing_photo"
        android:hint="Name                       "
        android:textSize="20dp"
        android:editable="false"
        />

    <EditText
        android:id="@+id/profile_missing_location_text"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_below="@id/profile_missing_location_label"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        android:layout_toEndOf="@id/profile_missing_photo"
        android:hint="Location                  "
        android:textSize="20dp"
        android:editable="false"
        />
    <TextView
        android:id="@+id/profile_description_label"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_below="@id/profile_missing_photo"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="15dp"
        android:background="@color/headbar"
        android:text="Description"
        android:textAlignment="center"
        android:textSize="25dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/profile_age_label"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_description_label"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:text="Age :"
        android:textSize="15dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/profile_age_text"
        android:layout_width="70dp"
        android:layout_height="35dp"
        android:layout_below="@id/profile_description_label"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"
        android:layout_toEndOf="@id/profile_age_label"
        android:hint="Age"
        android:textSize="12dp"
        android:editable="false"
        />

    <TextView
        android:id="@+id/profile_height_label"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_description_label"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:text="Height :"
        android:textAlignment="center"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_toEndOf="@id/profile_age_text"/>

    <EditText
        android:id="@+id/profile_height_text"
        android:layout_width="85dp"
        android:layout_height="35dp"
        android:layout_below="@id/profile_description_label"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="5dp"
        android:layout_toRightOf="@id/profile_height_label"
        android:hint="Height"
        android:textSize="12dp"
        android:editable="false"
        />

    <TextView
        android:id="@+id/profile_gender_label"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_age_label"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="5dp"
        android:text="Gender :"
        android:textSize="15dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/profile_gender_text"
        android:layout_width="70dp"
        android:layout_height="35dp"
        android:layout_below="@id/profile_age_text"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"
        android:layout_toRightOf="@id/profile_gender_label"
        android:hint="Gender"
        android:textSize="12dp"
        android:editable="false"
        />

    <TextView
        android:id="@+id/profile_relation_label"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_height_label"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:text="Relation:"
        android:textAlignment="center"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_toRightOf="@id/profile_age_text"/>

    <EditText
        android:id="@+id/profile_relation_text"
        android:layout_width="wrap_content"
        android:editable="false"
        android:layout_height="35dp"
        android:layout_below="@id/profile_height_text"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="5dp"
        android:layout_toRightOf="@id/profile_height_label"
        android:hint="Relation"
        android:textSize="12dp"
        />

    <TextView
        android:id="@+id/profile_last_seen_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_gender_label"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="5dp"
        android:text="Last Seen :"
        android:textAlignment="center"
        android:textSize="15dp"
        android:textStyle="bold"
        />

    <EditText
        android:id="@+id/profile_last_seen_text"
        android:editable="false"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_below="@id/profile_gender_text"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"
        android:layout_toRightOf="@id/profile_last_seen_label"
        android:hint="Last Seen"
        android:textSize="12dp"
        />

    <TextView
        android:id="@+id/profile_general_desc_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_last_seen_label"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:text="General Description :"
        android:textAlignment="center"
        android:textSize="15dp"
        android:textStyle="bold"
        />

    <EditText
        android:id="@+id/profile_general_desc_text"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_below="@id/profile_general_desc_label"
        android:layout_marginBottom="5dp"
        android:hint="General Description"
        android:editable="false"
        android:textAlignment="textStart"
        android:textSize="12dp"
        />

    <TextView
        android:id="@+id/profile_contact_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_general_desc_text"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="5dp"
        android:text="Contact Info :"
        android:textAlignment="center"
        android:textSize="15dp"
        android:textStyle="bold"
        />

    <EditText
        android:id="@+id/profile_contact_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_general_desc_text"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@id/profile_contact_label"
        android:hint="Contact Number"
        android:textSize="12dp"
        android:textIsSelectable="true"
        />

    <Button
        android:id="@+id/profile_back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:backgroundTint="@color/headbar"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_below="@id/profile_contact_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        />
</RelativeLayout>