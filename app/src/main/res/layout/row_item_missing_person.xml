<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="5dp"
    app:cardCornerRadius="5dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="6dp">


        <ImageView

            android:id="@+id/imageViewMissingPerson"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_row="0"
            android:layout_rowSpan="3"
            android:layout_column="0" />

        <TextView
            android:id="@+id/textViewMissingName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/imageViewMissingPerson"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textViewMissingLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewMissingName"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/imageViewMissingPerson"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/textViewMissingContact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewMissingLocation"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/imageViewMissingPerson"
            android:textSize="16sp" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>